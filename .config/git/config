[core]
    editor = vim
    excludesfile = ~/.config/git/ignore
    autocrlf = input
    pager = less -FMRiX

[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = true
    pager = true

[color "diff"]
    whitespace = red reverse

[push]
    default = current

[alias]
    ls = log --all --graph --decorate
    ll = log --all --graph --decorate --numstat --pretty=fuller
    co = checkout
    cb = checkout -b
    pu = push -u
    ri = rebase -i
    bb = branch --all -vv

[pull]
    rebase = false

[merge]
    tool = vimdiff
    conflictstyle = diff3

[mergetool]
    prompt = false

[include]
    path = config-personal

[includeIf "gitdir:~/github-transferwise/"]
    path = config-work

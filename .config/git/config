[core]
    editor = vim
    excludesfile = ~/.config/git/ignore
    autocrlf = input
    pager = less -FMRiX

[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = true
    pager = true

[color "diff"]
    whitespace = red reverse

[push]
    default = current

[alias]
    co = checkout
    bb = branch --all -vv
    ls = log --all --graph --decorate
    ll = log --all --graph --decorate --numstat

[include]
    path = config.local

[pull]
    rebase = false
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	prompt = false

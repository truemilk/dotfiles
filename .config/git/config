[core]
    editor = vim
    excludesfile = ~/.config/git/ignore
    autocrlf = input
    pager = less -FMRiX

[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = true
    pager = true

[color "diff"]
    whitespace = red reverse

[push]
    default = current

[alias]
    ls = log --all --graph --decorate
    ll = log --all --graph --decorate --numstat --pretty=fuller --show-signature
    up = pull
    co = checkout
    cob = checkout -b
    pu = push -u
    ri = rebase -i
    b = branch --all -vv
    s = status -s
    ss = status
    del = branch -D
    br = branch --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(contents:subject) %(color:green)(%(committerdate:relative)) [%(authorname)]' --sort=-committerdate
    save = !git add -A && git commit -m 'commit save point'
    undo = reset HEAD~1 --mixed
    res = !git reset --hard
    done = !git push origin HEAD
    lg = log --pretty=format:\"%C(magenta)%h%Creset -%C(red)%d%Creset %s %C(green)(%cr) [%an]\" --abbrev-commit -50

[pull]
    rebase = true

[merge]
    tool = vimdiff
    conflictstyle = diff3

[mergetool]
    prompt = false

[include]
    path = config-personal

[includeIf "gitdir:~/git/transferwise/"]
    path = config-transferwise
